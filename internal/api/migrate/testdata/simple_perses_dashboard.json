{
  "kind": "Dashboard",
  "metadata": {
    "name": "xRV24sBVk",
    "createdAt": "0001-01-01T00:00:00Z",
    "updatedAt": "0001-01-01T00:00:00Z",
    "version": 0,
    "project": ""
  },
  "spec": {
    "display": {
      "name": "Perses testing / Simple grafana dashboard"
    },
    "variables": [
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "My Custom Variable",
            "description": "This Custom variable should be translated into a ListVariable > StaticListVariable in Perses",
            "hidden": false
          },
          "defaultValue": "one",
          "allowAllValue": false,
          "allowMultiple": false,
          "plugin": {
            "kind": "StaticListVariable",
            "spec": {
              "values": [
                "one",
                "two",
                {
                  "label": "three",
                  "value": "3"
                }
              ]
            }
          },
          "name": "MyCustom"
        }
      },
      {
        "kind": "TextVariable",
        "spec": {
          "display": {
            "name": "My Constant Variable",
            "description": "This Custom variable should be translated into a TextVariable in Perses, with constant flag set to true",
            "hidden": true
          },
          "value": "${VAR_MYCONST}",
          "constant": true,
          "name": "MyConst"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "Stack",
            "description": "Label values, 1rst flavor",
            "hidden": false
          },
          "allowAllValue": true,
          "allowMultiple": false,
          "customAllValue": ".*",
          "sort": "none",
          "plugin": {
            "kind": "PrometheusLabelValuesVariable",
            "spec": {
              "labelName": "stack",
              "matchers": []
            }
          },
          "name": "lv1"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "Stack with Metric",
            "description": "Label values, 2nd flavor",
            "hidden": false
          },
          "allowAllValue": true,
          "allowMultiple": false,
          "sort": "none",
          "plugin": {
            "kind": "PrometheusLabelValuesVariable",
            "spec": {
              "labelName": "stack",
              "matchers": [
                "thanos_build_info"
              ]
            }
          },
          "name": "lv2"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "Stack with Timeserie",
            "description": "Label values, 3rd flavor",
            "hidden": false
          },
          "allowAllValue": true,
          "allowMultiple": false,
          "sort": "alphabetical-asc",
          "plugin": {
            "kind": "PrometheusLabelValuesVariable",
            "spec": {
              "labelName": "stack",
              "matchers": [
                "thanos_build_info{stack=~\"erd.+\"}"
              ]
            }
          },
          "name": "lv3"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "Stack with Timeserie reusing other variable",
            "description": "Label values, 4th flavor",
            "hidden": false
          },
          "allowAllValue": true,
          "allowMultiple": false,
          "sort": "alphabetical-desc",
          "plugin": {
            "kind": "PrometheusLabelValuesVariable",
            "spec": {
              "labelName": "stack",
              "matchers": [
                "thanos_build_info{stack=~\"$lv1\"}"
              ]
            }
          },
          "name": "lv4"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "description": "ad hoc filter",
            "hidden": false
          },
          "defaultValue": "1m",
          "allowAllValue": false,
          "allowMultiple": false,
          "plugin": {
            "kind": "StaticListVariable",
            "spec": {
              "values": [
                "1m",
                "10m",
                "30m",
                "1h",
                "6h",
                "12h",
                "1d",
                "7d",
                "14d",
                "30d"
              ]
            }
          },
          "name": "interval"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "My Ad hoc filter",
            "description": "This ad-hoc filter should be replaced by a placeholder in the migration since it's not supported in Perses yet",
            "hidden": false
          },
          "allowAllValue": false,
          "allowMultiple": false,
          "plugin": {
            "kind": "StaticListVariable",
            "spec": {
              "values": [
                "grafana",
                "migration",
                "not",
                "supported"
              ]
            }
          },
          "name": "AdHocFilter"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "hidden": false
          },
          "allowAllValue": false,
          "allowMultiple": false,
          "sort": "none",
          "plugin": {
            "kind": "PrometheusLabelNamesVariable",
            "spec": {
              "matchers": []
            }
          },
          "name": "LabelNamesTest"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "name": "Query Result Variable",
            "description": "variable using query_result clause",
            "hidden": false
          },
          "allowAllValue": false,
          "allowMultiple": false,
          "sort": "alphabetical-ci-asc",
          "plugin": {
            "kind": "PrometheusPromQLVariable",
            "spec": {
              "expr": "group by(type) (up{osname=~\".*Linux.*\", job=~\"cmdbrtu-custom-sd.*\", prometheus=~\"system\"})",
              "labelName": "type"
            }
          },
          "name": "queryResVar"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "description": "query result var for volatile series (relies $__range global var)",
            "hidden": false
          },
          "allowAllValue": false,
          "allowMultiple": false,
          "sort": "alphabetical-ci-desc",
          "plugin": {
            "kind": "PrometheusPromQLVariable",
            "spec": {
              "expr": "group by(type) (present_over_time(up{osname=~\".*Linux.*\", job=~\"cmdbrtu-custom-sd.*\", prometheus=~\"system\"}[$__range]))",
              "labelName": "type"
            }
          },
          "name": "queryResVarVolatile"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "description": "query result var with no <aggr> by clause",
            "hidden": false
          },
          "allowAllValue": false,
          "allowMultiple": false,
          "sort": "none",
          "plugin": {
            "kind": "PrometheusPromQLVariable",
            "spec": {
              "expr": "query_result(present_over_time(up{osname=~\".*Linux.*\", job=~\"cmdbrtu-custom-sd.*\", prometheus=~\"system\"}[$__range]))",
              "labelName": "migration_from_grafana_not_supported"
            }
          },
          "name": "queryResVarOther"
        }
      },
      {
        "kind": "TextVariable",
        "spec": {
          "display": {
            "name": "My Text Box Variable",
            "description": "This Text box variable should be translated into a TextVariable in Perses, with constant flag set to false",
            "hidden": false
          },
          "value": "<placeholder text>",
          "name": "MyTextBox"
        }
      }
    ],
    "panels": {
      "0": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "My Stat chart",
            "description": "a stat chart that is basically showing stats as a chart"
          },
          "plugin": {
            "kind": "StatChart",
            "spec": {
              "calculation": "last-number",
              "sparkline": {},
              "format": {
                "unit": "bytes/sec",
                "decimalPlaces": 2
              },
              "thresholds": {
                "steps": [
                  {
                    "color": "green",
                    "value": 0
                  },
                  {
                    "color": "red",
                    "value": 5
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "${DS_PROM}"
                    },
                    "query": "vector(4)"
                  }
                }
              }
            }
          ]
        }
      },
      "1": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "My 2nd panel",
            "description": "my second panel is a gauge"
          },
          "plugin": {
            "kind": "GaugeChart",
            "spec": {
              "calculation": "last-number",
              "format": {
                "unit": "hours",
                "decimalPlaces": 1
              },
              "thresholds": {
                "steps": [
                  {
                    "color": "green",
                    "value": 0
                  },
                  {
                    "color": "red",
                    "value": 80
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "${DS_PROM}"
                    },
                    "query": "vector(2)"
                  }
                }
              }
            }
          ]
        }
      },
      "2": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "My 1rst panel",
            "description": "my first panel is a timeseries"
          },
          "plugin": {
            "kind": "TimeSeriesChart",
            "spec": {
              "legend": {
                "mode": "list",
                "position": "bottom",
                "values": [
                  "min",
                  "max",
                  "first",
                  "first-number",
                  "last",
                  "last-number",
                  "mean",
                  "sum"
                ]
              },
              "yAxis": {
                "format": {
                  "decimalPlaces": 3
                }
              },
              "visual": {
                "areaOpacity": 0,
                "connectNulls": true,
                "display": "line",
                "lineWidth": 1
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "${DS_PROM}"
                    },
                    "query": "vector(1)"
                  }
                }
              }
            }
          ]
        }
      },
      "3": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "UP status"
          },
          "plugin": {
            "kind": "Table",
            "spec": {
              "columnSettings": [
                {
                  "header": "",
                  "name": "timestamp",
                  "hide": true
                },
                {
                  "hide": true,
                  "name": "__name__"
                },
                {
                  "header": "API server",
                  "name": "apiserver"
                },
                {
                  "header": "ValueCustomHeader",
                  "name": "value"
                },
                {
                  "name": "API server",
                  "width": 300
                },
                {
                  "name": "endpoint",
                  "width": 75
                }
              ],
              "density": "compact"
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "${DS_PROM}"
                    },
                    "query": "up{stack=\"ccp-ne-ogob01a\", prometheus=\"platform\"}"
                  }
                }
              }
            }
          ]
        }
      },
      "4_0": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "My 3rd panel",
            "description": "my third panel is a timeseries"
          },
          "plugin": {
            "kind": "TimeSeriesChart",
            "spec": {
              "visual": {
                "areaOpacity": 0.85,
                "connectNulls": false,
                "display": "line",
                "lineWidth": 1
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "${DS_PROM}"
                    },
                    "query": "vector(3)"
                  }
                }
              }
            }
          ]
        }
      },
      "4_1": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Empty heatmap"
          },
          "plugin": {
            "kind": "Markdown",
            "spec": {
              "text": "**Migration from Grafana not supported !**"
            }
          }
        }
      },
      "4_2": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "My Text panel"
          },
          "plugin": {
            "kind": "Markdown",
            "spec": {
              "text": "# Title\n\nFor markdown syntax help: [commonmark.org/help](https://commonmark.org/help/)"
            }
          }
        }
      }
    },
