{
  "kind": "Dashboard",
  "metadata": {
    "name": "random",
    "createdAt": "0001-01-01T00:00:00Z",
    "updatedAt": "0001-01-01T00:00:00Z",
    "version": 0,
    "project": ""
  },
  "spec": {
    "display": {
      "name": "Basic dashboard"
    },
    "variables": [
      {
        "kind": "TextVariable",
        "spec": {
          "display": {
            "name": "My Constant Variable",
            "description": "This Custom variable should be translated into a TextVariable in Perses, with constant flag set to true",
            "hidden": true
          },
          "value": "job!=\"\"",
          "constant": true,
          "name": "MyConst"
        }
      },
      {
        "kind": "TextVariable",
        "spec": {
          "display": {
            "name": "My Text Box Variable",
            "description": "This Text box variable should be translated into a TextVariable in Perses, with constant flag set to false",
            "hidden": false
          },
          "value": "<placeholder text>",
          "name": "MyTextBox"
        }
      },
      {
        "kind": "ListVariable",
        "spec": {
          "display": {
            "hidden": false
          },
          "defaultValue": "1",
          "allowAllValue": false,
          "allowMultiple": false,
          "plugin": {
            "kind": "StaticListVariable",
            "spec": {
              "values": [
                "1",
                "2",
                "3"
              ]
            }
          },
          "name": "MyList"
        }
      }
    ],
    "panels": {
      "0_0": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Some metrics",
            "description": "Just displaying some metrics with a Gauge panel"
          },
          "plugin": {
            "kind": "GaugeChart",
            "spec": {
              "calculation": "last-number",
              "format": {
                "unit": "decimal"
              },
              "max": 14,
              "thresholds": {
                "steps": [
                  {
                    "color": "red",
                    "value": 80
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "$datasource"
                    },
                    "query": "sum(up{$MyTextBox,$MyConst})"
                  }
                }
              }
            }
          ]
        }
      },
      "0_1": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Some metrics",
            "description": "Just displaying some metrics with a BarGauge panel"
          },
          "plugin": {
            "kind": "BarChart",
            "spec": {
              "calculation": "last-number",
              "format": {
                "unit": "percent"
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "$datasource"
                    },
                    "query": "up{$MyTextBox,$MyConst}"
                  }
                }
              }
            }
          ]
        }
      },
      "0_2": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Some metrics",
            "description": "Just displaying some metrics with a Stat panel"
          },
          "plugin": {
            "kind": "StatChart",
            "spec": {
              "calculation": "last-number",
              "format": {
                "unit": "decimal"
              },
              "metricLabel": "",
              "sparkline": {},
              "thresholds": {
                "steps": [
                  {
                    "color": "red",
                    "value": 80
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "$datasource"
                    },
                    "query": "sum(up{$MyTextBox,$MyConst})"
                  }
                }
              }
            }
          ]
        }
      },
      "1_0": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Some metrics",
            "description": "Just displaying some metrics with a TimeSeries panel"
          },
          "plugin": {
            "kind": "TimeSeriesChart",
            "spec": {
              "legend": {
                "mode": "table",
                "position": "right",
                "values": [
                  "min",
                  "max",
                  "mean"
                ]
              },
              "visual": {
                "areaOpacity": 0,
                "connectNulls": false,
                "display": "line",
                "lineWidth": 1,
                "stack": "all"
              },
              "yAxis": {
                "format": {
                  "unit": "decimal"
                }
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "$datasource"
                    },
                    "query": "up{$MyTextBox,$MyConst} * 100"
                  }
                }
              }
            }
          ]
        }
      }
    },
    "layouts": [
      {
        "kind": "Grid",
        "spec": {
          "display": {
