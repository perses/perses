{
  "extends": "../tsconfig.web.json",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../",
    "tsBuildInfoFile": "../.build-cache/app.tsbuildinfo",
    "incremental": true
  },
  "references": [
    {
      "path": "../core",
      "prepend": false
    },
    {
      "path": "../panels-plugin",
      "prepend": false
    },
    {
      "path": "../prometheus-plugin",
      "prepend": false
    }
  ],
  // For webpack builds that use ts-node to compile the configs
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}
