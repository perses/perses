{
  "name": "perses-dev",
  "description": "Monorepo for the Perses UI",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "start": "turbo run start",
    "start-with-storybook": "turbo run start storybook:start",
    "storybook": "turbo run storybook:start",
    "storybook:build": "turbo run storybook:build",
    "storybook:serve": "turbo run storybook:serve",
    "storybook:serve-and-test": "turbo run storybook:serve-and-test",
    "storybook:happo": "npm run happo-ci-github-actions -w storybook",
    "clean": "turbo run clean",
    "reinstall": "npm run clean && rm -rf **/node_modules && npm install",
    "clear-turbo-cache": "rimraf node_modules/.cache/turbo",
    "e2e": "turbo run e2e:local",
    "e2e:debug": "turbo run e2e -- --debug",
    "e2e:ci": "turbo run e2e:ci",
    "typedoc": "typedoc"
  },
  "workspaces": [
    "app",
    "components",
    "core",
    "dashboards",
    "explore",
    "e2e",
    "internal-utils",
    "panels-plugin",
    "plugin-system",
    "prometheus-plugin",
    "storybook",
    "tempo-plugin"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.61",
    "@swc/jest": "^0.2.26",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.14.15",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild-loader": "^4.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "node-fetch": "^2.6.11",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "swc-loader": "^0.2.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.12",
    "typedoc": "^0.25.8",
    "typescript": "5.3.3",
    "wait-on": "^7.0.1"
  },
  "packageManager": "npm@10.8.2"
}
